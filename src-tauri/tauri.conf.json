{
  "productName": "Kateb",
  "version": "1.0.0",
  "identifier": "com.beingmomen.kateb",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "fuser -k 3654/tcp 2>/dev/null; pnpm dev",
    "devUrl": "http://localhost:3654",
    "frontendDist": "../.output/public"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "كاتِب — إملاء صوتي ذكي",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "tooltip": "كاتِب",
      "id": "main",
      "menuOnLeftClick": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
